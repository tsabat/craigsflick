<html>
<body>
<% str='' %>
<% @photos.each do |photo| %>
    <% str+="<a href=\"#{photo[:url]}\" title=\"#{photo[:title]} by #{photo[:user]}, on Flickr\"><img src=\"#{photo[:url]}\" width=\"1024\" height=\"765\" alt=\"Photo inserted by Craigsflick.com\"></a><br />\n\n" %>
<% end %>

<label for="output">Copy the links below to Craigslist</label><br />
<textarea id="output" rows="10" cols="90"><%= str %></textarea><br />

<div id="preview">
  <% @photos.each_with_index do |photo, i| %>
      <% row_class = i%2 == 0 ? "even" : "odd" %>
      <img src="<%= photo[:url] %>" class="<%= row_class %>"alt=""><br/>
  <% end %>
</div>

</body>
</html>